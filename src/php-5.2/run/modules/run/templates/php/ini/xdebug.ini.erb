[xdebug]
zend_extension = /usr/local/src/phpfarm/inst/current/lib/php/extensions/no-debug-non-zts-20060613/xdebug.so

xdebug.remote_enable = On
xdebug.remote_port = <%= @php_ini_xdebug_remote_port %>
xdebug.remote_host = <%= @php_ini_xdebug_remote_host %>
xdebug.remote_connect_back = <%= @php_ini_xdebug_remote_connect_back %>
xdebug.remote_handler = "dbgp"
xdebug.remote_mode = req
xdebug.idekey = "<%= @php_ini_xdebug_idekey %>"
xdebug.max_nesting_level = 1000
